<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>   

        <div class="card-body">
            <form method="post" action="/responder">
                <label for="">Resposta:</label>
                <textarea name="corpo" class="form-control"id="" cols="30" rows="10" placeholder="Digite sua Resposta"></textarea>
                <br>
                <button type="submit" class="btn btn-primary">Responder</button>
                <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            </form>
            <br>
            <h3>Respostas</h3>
            <% respostas.forEach((resposta)=> {%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo%></p>
                        <span><%= resposta.createdAt%></span>
                    </div>
                </div>
           <% }) %>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>